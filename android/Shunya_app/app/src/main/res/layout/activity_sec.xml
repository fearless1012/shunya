<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ramya.shunya_app.SecActivity">


    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Generate A New Policy "
        android:id="@+id/button2"
        android:textSize="50px"
        android:textColor="#FFFFFF"
        android:background="#088da5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="80dp"
        android:onClick="openform"/>

    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Review Existing Policies"
        android:textSize="50px"
        android:textColor="#FFFFFF"
        android:background="#088da5"
        android:id="@+id/button3"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="openpolicies"/>

    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="New Policy with Aadhaar Fill"
        android:id="@+id/button4"
        android:textSize="50px"
        android:textColor="#FFFFFF"
        android:background="#088da5"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="openfill"/>

</RelativeLayout>
