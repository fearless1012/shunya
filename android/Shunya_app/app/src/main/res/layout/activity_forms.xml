<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ramya.shunya_app.Forms">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Basic Details"
            android:background="#088da5"
            android:textColor="#FED034"
            android:id="@+id/div1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Select Plan"
            android:id="@+id/policyname"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/div1"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/date"
            android:hint="11/1/2015"
            android:layout_below="@+id/policyname"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Name"
            android:ems="10"
            android:id="@+id/name"
            android:layout_below="@+id/date"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/div1"
            android:layout_alignEnd="@+id/div1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter Aadhar Number"
            android:ems="10"
            android:id="@+id/aadhaarno"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Enter Contact"
            android:ems="10"
            android:id="@+id/ph"
            android:layout_below="@id/aadhaarno"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/aadhaarno"
            android:layout_alignEnd="@+id/aadhaarno" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Address 1"
            android:ems="10"
            android:id="@+id/ad"
            android:layout_below="@id/ph"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/aadhaarno"
            android:layout_alignEnd="@+id/aadhaarno" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Address 2"
            android:ems="10"
            android:id="@+id/ad1"
            android:layout_below="@id/ad"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/aadhaarno"
            android:layout_alignEnd="@+id/aadhaarno" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Address 3"
            android:ems="10"
            android:id="@+id/ad2"
            android:layout_below="@id/ad1"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/aadhaarno"
            android:layout_alignEnd="@+id/aadhaarno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AADHAAR :"
            android:textColor="#088da5"
            android:id="@+id/textView"
            android:layout_above="@+id/ph"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME :"
            android:textColor="#088da5"
            android:id="@+id/textView2"
            android:layout_above="@+id/aadhaarno"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAN NAME :"
            android:textColor="#088da5"
            android:id="@+id/textView5"
            android:layout_above="@+id/date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE :"
            android:textColor="#088da5"
            android:id="@+id/textView6"
            android:layout_above="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT :"
            android:textColor="#088da5"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/ph"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS :"
            android:textColor="#088da5"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/ad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:id="@+id/button5"
            android:layout_below="@+id/ad2"
            android:layout_centerHorizontal="true"
            android:onClick="AadhaarAuth"/>




    </RelativeLayout>
</ScrollView>

